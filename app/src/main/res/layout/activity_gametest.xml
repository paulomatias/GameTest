<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6efa43">

    <LinearLayout
        android:id="@+id/ll_gameBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.excilys.myapplication.VScroll
            android:id="@+id/vs_gameBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.excilys.myapplication.HScroll
                android:id="@+id/hs_gameBoard"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/tl_gameBoard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                </TableLayout>
            </com.excilys.myapplication.HScroll>
        </com.excilys.myapplication.VScroll>
    </LinearLayout>
</RelativeLayout>
