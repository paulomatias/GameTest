<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_gameBoard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.excilys.gametest.Town">

    <com.excilys.gametest.views.VScroll
        android:id="@+id/vs_gameBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.excilys.gametest.views.HScroll
            android:id="@+id/hs_gameBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_boardContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TableLayout
                    android:id="@+id/tl_gameBoardGround"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableLayout
                    android:id="@+id/tl_gameBoardElement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
        </com.excilys.gametest.views.HScroll>
    </com.excilys.gametest.views.VScroll>

</RelativeLayout>
